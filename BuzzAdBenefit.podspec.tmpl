Pod::Spec.new do |s|
  s.platform = :ios
  s.ios.deployment_target = '8.0'
  s.requires_arc = true

  s.name = "BuzzAdBenefit"
  s.summary = "The BuzzAd Benefit SDK makes it easy to serve advertisements with benefit in your iOS app."
  s.description = "The BuzzAd Benefit SDK makes it easy to serve advertisements with benefit in your iOS app. It supports native ads and video ads. It provides powerful and customizable UI elements to make the ads look great in your app."
  s.version = "{{ (ds "event").release.tag_name | strings.TrimPrefix "v" }}"
  s.license = { :type => "MIT", :file => "LICENSE" }
  s.author = "Buzzvil"
  s.homepage = "https://github.com/buzzvil/bab-ios-sdk"

  s.source = {
    :http => "https://github.com/Buzzvil/bab-ios-sdk/releases/download/{{ (ds "event").release.tag_name }}/BuzzAdBenefit.zip"
  }

  s.dependency 'AFNetworking', '~> 3.0'
  s.dependency 'SDWebImage', '~> 4.0'
  s.dependency 'SDWebImage/WebP', '~> 4.0'

  s.vendored_frameworks = ['BuzzAdBenefit.framework', 'BuzzAdBenefitNative.framework', 'BuzzAdBenefitInterstitial.framework', 'BuzzAdBenefitFeed.framework']
end
